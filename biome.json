{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"scripts/**/*.{ts,tsx,mjs,cjs,js}",
			".github/**/*.{yml,yaml}",
			"**/*.{md,json}",
			"!!**/node_modules",
			"!!**/out",
			"!!**/dist",
			"!!**/.obsidian",
			"!!**/assets/piece-css",
			"!!**/assets/board-css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
